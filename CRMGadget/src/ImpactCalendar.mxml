			private function calculateTotalAllOpportunity():void{
				
				var totalAll:Number=0;
				var totalClosed:Number=0;
				var totalOpen:Number=0;
				var currentGroup:int =0;
				
				var expenseTotal:Number=0;
				var callTotal:Number=0;
				var lastFyTotal:Number=0;				
				var mapGroup:Dictionary = new Dictionary();
				var saveTotal:Object = Database.icManualTotal.selectLastRecord();
				var currentFyTarget:Number=0;
				var actualTotal:Object = rows.getItemAt(rows.length-2);
				var forCaseTotal:Object = rows.getItemAt(rows.length-3);
				var varianceTotal:Object = rows.getItemAt(rows.length-1);
				//clear value
				for each(var fq:String in OpportunityDAO.ALL_FY_QUATER){
					forCaseTotal[fq]=null;
					varianceTotal[fq]=null;
				}
				if(saveTotal!=null && !actualTotal.loaded){
					for(var f:String in saveTotal){
						actualTotal[f] = saveTotal[f];
					}
					actualTotal.loaded=true;
					if(!StringUtils.isEmpty(saveTotal.FYTarget)){
						currentFyTarget = parseFloat(saveTotal.FYTarget);
						actualTotal.FYTarget = currentFyTarget;
					}
				}else{
					if(actualTotal.loaded){
						currentFyTarget = actualTotal.FYTarget
					}
				}
				
				for each(var r:Object in gridListAll.dataProvider){
					
					if(!r.isTotal){
						
						if(!mapGroup.hasOwnProperty(r.OpportunityId)){							
							mapGroup[r.OpportunityId]= currentGroup++;
							if(!StringUtils.isEmpty(r.CustomText37)){
								expenseTotal+=parseFloat(r.CustomCurrency2);
								callTotal+=parseFloat(r.CustomText37);
							}
						}		
						if(!StringUtils.isEmpty(r.co7_LastFYImpact)){
							lastFyTotal+=parseFloat(r.co7_LastFYImpact);
						}
						
						r.group = mapGroup[r.OpportunityId];
						var currentTotalFy:Number = parseFloat(getCurrentFyImpact(r));
						if(!isNaN(currentTotalFy)){
							totalAll+=currentTotalFy;
							if(r.SalesStage == SalesStageUtils.getCloseLostValue() || r.SalesStage == SalesStageUtils.getCloseWonValue()){
								totalClosed += currentTotalFy;
							}else{
								totalOpen +=currentTotalFy;
							}
						}
						for each(var q:String in OpportunityDAO.ALL_FY_QUATER){
							var qObj:Object = forCaseTotal[q];
							if(qObj==null){
								qObj = {};
								forCaseTotal[q]=qObj;
							}
							var rQ:Object = r[q];
							for each(var m:String in OpportunityDAO.MONTH_FIELD_FOR_EACH_Q){
								if(rQ!=null){
									var mf:String = m;
									var rv:String = rQ[mf];
									if(StringUtils.isEmpty(rv)){
										rv="0";
									}
									if(qObj.hasOwnProperty(mf)){
										qObj[mf]+=parseFloat(rv);
									}else{
										qObj[mf]=parseFloat(rv);
									}
								}else{
									if(!qObj.hasOwnProperty(mf)){
										qObj[mf]="0";
									}
								}
							}
						}
					}else{						
						if(!mapGroup.hasOwnProperty("totalop")){							
							mapGroup["totalop"]= currentGroup++;
						}						
						r.group = mapGroup["totalop"];
					}
					
				}			
				forCaseTotal.co7_LastFYImpact = lastFyTotal.toFixed(2);
				forCaseTotal.CustomCurrency2 = expenseTotal;
				forCaseTotal.CustomText37 = callTotal;
				
				//calculate variance's total
				for each(var vq:String in OpportunityDAO.ALL_FY_QUATER){
					var vqObj:Object = varianceTotal[q];
					if(vqObj==null){
						vqObj = {};
						varianceTotal[vq]=vqObj;
					}
					var fcQ:Object = forCaseTotal[vq];
					var acQ:Object = actualTotal[vq];					
					for each(var m:String in OpportunityDAO.MONTH_FIELD_FOR_EACH_Q){
						if(acQ==null){
							if(fcQ!=null){
								vqObj[m]=fcQ[m];
							}
							
						}else{
							if(fcQ==null){
								var mv:Number = parseFloat(acQ[m]);
								if(isNaN(mv)){
									mv=0;
								}
								vqObj[m]=mv.toFixed(2);
							}else{
								var acv:Number = parseFloat(acQ[m]);
								if(isNaN(acv)){
									acv=0;
								}
								var fcv:Number = parseFloat(fcQ[m]);
								if(isNaN(fcv)){
									fcv=0;
								}
								var vc:Number = acv-fcv;
								vqObj[m]=vc.toFixed(2);
							}
						}
